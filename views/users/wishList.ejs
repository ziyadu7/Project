<%- include('../layouts/commonHeader.ejs') %>

<section class="shop-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shop__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Image</th>
                                <th>Price</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <%if(wishlist!==undefined){%>
                                    <%if(wishlist.wishlist){%>
                                        <%wishlist.wishlist.forEach((item)=>{%>
                                            <%if(item.is_show===true){%>
                                                <tr>
                                                    <td class="cart__product__item">
                                                        <div class="cart__product__item__title">
                                                            <h6><%=item.title%></h6>
                                                        </div>
                                                    </td>
                                                    <td class="cart__product__item">
                                                        <div class="cart__product__item__title">
                                                            <img width="40px" height="50px" src="/proImage/<%=item.image[0]%>" alt="">
                                                        </div>
                                                    </td>
                                                    <td class="cart__price">Rs<%=item.price%></td>
                                                    <td class="cart__quantity">
                                                  <div class="pro-qty d-flex align-items-center">
                                                    </td>
                                                    <td class="cart__close"><a href="/removeWishlist?id=<%=item._id%>"><span><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="M19 6.41L17.59 5L12 10.59L6.41 5L5 6.41L10.59 12L5 17.59L6.41 19L12 13.41L17.59 19L19 17.59L13.41 12z"/></svg></span></a></td>
                                                    <td class="cart__close"><a href="/addToCart?id=<%=item._id%>"><span class="icon_bag_alt"></span></a></td>
                                                </tr>
                                                <%}%>
                                
                                   <%})%>
                           <%}%>
                           <%}%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class=" d-flex justify-content-end">
                <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="cart__btn update__btn">
                    <a href="/"><span class="icon_loading"></span> Continue shoping</a>
                </div>
            </div>
            </div>
        </div>
    </div>
</section>

<%- include('../layouts/pagesFooter.ejs') %>